
@*Chamar a Model para que seja possível chamar os métodos que estão na model*@
@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete" class="mt-5">

    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        @*Mostra todas as validações*@
        <div asp-validation-summary="All"></div>

        <div>
            <label asp-for="Name" style="font-size: 18px" class="mb-1"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>

        <div class="mt-3">
            <label asp-for="DisplayOrder" style="font-size: 18px" class="mb-1"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger mt-2" style="width: 150px">
            Delete
        </button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-2" style="width: 150px;">
            Back to List
        </a>

    </div>
</form>

@*Partial view para validações Client Side*@

@*Faz validações clientside dos campos sem mandar requisição para o servidor*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}